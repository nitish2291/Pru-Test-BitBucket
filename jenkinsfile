pipeline {
  agent any
  stages {
    stage ('Build') {
      steps {
        sh '''
            echo "username"
            whoami
            echo "host"
            echo hostname
            hostname
            pwd
            java --version
            export MAVEN_HOME=/opt/maven
            env
            mvn --version
            '''
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat_credential', path: '', url: 'http://dayal-test.letspractice.tk:8081')], contextPath: '/pipeline', onFailure: false, war: 'webapp/target/*.war' 
        }
      }
    }
  }
}